<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="View Progress"
        android:id="@+id/btProgress"

        android:background="@drawable/selector_button_blue"
        android:shadowColor="#9df4ff"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"


        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="graph"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Place an AD"
        android:id="@+id/btPlaceAD"
        android:onClick="Ad"
        android:background="@drawable/selector_button_red"
        android:shadowColor="#FF5476"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btProgress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Ads"
        android:id="@+id/textView6"


        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#A6DC16"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>