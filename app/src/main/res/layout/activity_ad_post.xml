<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
   >





    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@drawable/logoonly"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView9"
        android:layout_toLeftOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Post an Ad"
        android:id="@+id/textView9"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#A6DC16"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/Out_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Outlet Name"
        android:background="@drawable/displace_edit_text_holo_dark"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="text"


        android:layout_marginTop="43dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/Product_Name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Product Name"
        android:background="@drawable/displace_edit_text_holo_dark"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Out_name"
        android:layout_alignLeft="@+id/Out_name"
        android:layout_alignStart="@+id/Out_name" />

    <EditText
        android:id="@+id/Price"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:background="@drawable/displace_edit_text_holo_dark"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="number"
        android:layout_below="@+id/Product_Name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Discount?"
        android:id="@+id/mySwitch"

        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textOn="Yes"
        android:textOff="No"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="catergory"
        android:id="@+id/catergory"
        android:background="@drawable/selector_button_orange"
        android:onClick="CreateDialog"
        android:layout_below="@+id/mySwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/AddPost"
        android:onClick="postAd"
        android:background="@drawable/selector_button_red"
        android:shadowColor="#FF5476"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textSize="25dp"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:background="@drawable/link"

        android:layout_below="@+id/catergory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="link"
        android:src="@drawable/selector_prefrence"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/map"
        android:src="@drawable/selector_prefrence"
        android:layout_below="@+id/catergory"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_marginTop="15dp"
        android:onClick="location"/>
    <ImageButton
        android:contentDescription="upload Picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/picture"
        android:background="@drawable/picture"
        android:src="@drawable/selector_prefrence"
        android:layout_below="@+id/catergory"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:layout_marginTop="15dp"
        android:onClick="picture"/>




</RelativeLayout>
